
"GUI
set number				"enable number on side
set cc=80
set showmatch				"highlight matching brackets
set incsearch				"search characters as 
set hlsearch				"hightlight matches [undo :noh]
set showcmd				"show commandline

set backspace=2				"enable backspace useage
set backspace=ident,eol,start		"set rules for backspace usage
filetype indent on			"allow for filetype detection



"useability
set encoding=utf-8			"change encoding
set fileencoding=utf-8			"different encoding change?
syntax enable				"enable sytax detection
set wildmenu				"enable autocomplete

